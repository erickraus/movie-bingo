---
import { getCollection } from 'astro:content';

const allMovies = await getCollection('movies');
const featuredMovies = allMovies.filter((movie) => movie.data.featured);
---

{featuredMovies.length > 0 && (
  <div class="mt-12">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-6">
      Featured Movies
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {featuredMovies.map((movie) => (
        <a
          href={`/movies/${movie.id}`}
          class="block bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow p-6 border border-gray-200 dark:border-gray-700"
        >
          <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">
            {movie.data.title}
          </h3>
          <div class="flex items-center gap-4 text-sm">
            <span class="px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 capitalize">
              {movie.data.difficulty}
            </span>
            <span class="text-gray-600 dark:text-gray-400">
              {movie.data.keywords.length} keywords
            </span>
          </div>
        </a>
      ))}
    </div>
  </div>
)}
