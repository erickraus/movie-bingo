---
interface Props {
  level: 1 | 2 | 3 | 4 | 5 | 6;
  [key: string]: any;
}

const { level, ...props } = Astro.props;
const Tag = `h${level}` as any;

const headingClasses = {
  h1: 'text-4xl font-bold mb-6 mt-8 text-gray-900 dark:text-gray-100',
  h2: 'text-3xl font-bold mb-4 mt-6 text-gray-900 dark:text-gray-100',
  h3: 'text-2xl font-semibold mb-3 mt-5 text-gray-900 dark:text-gray-100',
  h4: 'text-xl font-semibold mb-2 mt-4 text-gray-800 dark:text-gray-200',
  h5: 'text-lg font-semibold mb-2 mt-3 text-gray-800 dark:text-gray-200',
  h6: 'text-base font-semibold mb-2 mt-3 text-gray-700 dark:text-gray-300',
};

const className = headingClasses[Tag as keyof typeof headingClasses];
---

<Tag class={className} {...props}>
  <slot />
</Tag>
