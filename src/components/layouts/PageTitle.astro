---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<div class="mb-8">
  <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-2">
    {title}
  </h1>
  {description && (
    <p class="text-lg text-gray-600 dark:text-gray-400">
      {description}
    </p>
  )}
</div>
