---
import menuConfig from '../../config/menu.json';
import siteConfig from '../../config/config.json';

const currentYear = new Date().getFullYear();
---

<footer class="bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800 mt-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <!-- Brand -->
      <div class="mb-4 md:mb-0">
        <p class="text-gray-600 dark:text-gray-400 text-sm">
          &copy; {currentYear} {siteConfig.title}. Making Movie Night more engaging.
        </p>
      </div>

      <!-- Footer Links -->
      <div class="flex space-x-6">
        {menuConfig.footer.map((item) => (
          <a
            href={item.href}
            class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 text-sm transition-colors"
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
