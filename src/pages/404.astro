---
import MainLayout from '../components/layouts/MainLayout.astro';
import notFoundMessages from '../config/404.json';

// Select a random message
const randomMessage = notFoundMessages.messages[
  Math.floor(Math.random() * notFoundMessages.messages.length)
];
---

<MainLayout title="Page Not Found">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
    <div class="text-9xl mb-8">ðŸŽ¬</div>

    <h1 class="text-6xl font-bold text-gray-900 dark:text-gray-100 mb-4">
      404
    </h1>

    <p class="text-2xl text-gray-700 dark:text-gray-300 mb-8 max-w-md">
      {randomMessage}
    </p>

    <div class="flex gap-4">
